---
// Type imports
import type { PlanetData } from "./PlanetUI.astro"

type Props = {
  planetData: PlanetData
}

const { planetData } = Astro.props
---

<ul class="stats">
  <p>
    <span class="heading-4">Rotation time</span><span class="heading-2"
      >{planetData.rotation}</span
    >
  </p>
  <p>
    <span class="heading-4">Revolution time</span><span class="heading-2"
      >{planetData.revolution}</span
    >
  </p>
  <p>
    <span class="heading-4">Radius</span><span class="heading-2"
      >{planetData.radius}</span
    >
  </p>
  <p>
    <span class="heading-4">Average temp.</span><span class="heading-2"
      >{planetData.temperature}</span
    >
  </p>
</ul>

<style lang="scss">
  @use "../sass/abstracts" as *;

  .stats {
    grid-area: stats;

    display: grid;
    gap: 0.5rem;

    p {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border: 1px solid $color-neutral-700;
      padding: 0.5625rem 1.5rem 0.8125rem 1.5rem;

      :first-child {
        opacity: 0.5;
      }
    }

    @include mq(medium) {
      grid-template-columns: repeat(4, 1fr);
      gap: 0.6875rem;

      p {
        flex-direction: column;
        align-items: start;
        gap: 0.375rem;
        padding: 1rem 0.9375rem 1.1875rem 0.9375rem;
      }
    }

    @include mq(large) {
      gap: clamp(0.6875rem, -6.1696rem + 11.4286vi, 1.6875rem);

      p {
        padding: 1.25rem 1.4375rem 1.6875rem 1.4375rem;
      }
    }
  }
</style>
